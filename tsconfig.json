{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "exclude": ["node_modules", "dist", "templates"]
}
